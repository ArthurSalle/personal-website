---
import Arrow from "@/assets/arrow.svg";

type Props = {
  href: string;
};

const { href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="font-manrope flex w-fit shrink-0 cursor-pointer items-center gap-1 rounded-full bg-zinc-800 px-2.5 py-1 text-sm font-medium text-zinc-100 transition-all duration-300 select-none hover:-translate-y-0.5 hover:bg-zinc-700"
>
  <slot />
  <img src={Arrow.src} alt="arrow icon" class="size-3" />
</a>
